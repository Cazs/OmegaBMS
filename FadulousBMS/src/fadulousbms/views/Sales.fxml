<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.cell.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>

<VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fadulousbms.controllers.SalesController">
   <children>
      <HBox alignment="CENTER_LEFT" VBox.vgrow="NEVER">
         <children>
            <MenuBar HBox.hgrow="ALWAYS">
              <menus>
                <Menu mnemonicParsing="false" text="File">
                  <items>
                    <MenuItem mnemonicParsing="false" onAction="#newQuote" text="New Quote" />
                        <MenuItem mnemonicParsing="false" text="Close" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Edit">
                  <items>
                    <MenuItem mnemonicParsing="false" text="Delete" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                  <items>
                    <MenuItem mnemonicParsing="false" text="About" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
            <Button alignment="CENTER" contentDisplay="CENTER" minHeight="35.0" minWidth="80.0" mnemonicParsing="false" onMouseClicked="#previousScreen" styleClass="btnBack" stylesheets="@../styles/home.css" text="Back" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
      <TableView fx:id="tblSales" editable="true" tableMenuButtonVisible="true" VBox.vgrow="ALWAYS">
        <columns>
          <TableColumn fx:id="colId" maxWidth="1.7976931348623157E308" minWidth="150.0" prefWidth="-1.0" text="Sale ID">
              <cellValueFactory>
                  <PropertyValueFactory property="_id" />
              </cellValueFactory>
          </TableColumn>
          <TableColumn fx:id="colClient" maxWidth="1.7976931348623157E308" minWidth="180.0" prefWidth="-1.0" text="Client">
              <cellValueFactory>
                  <PropertyValueFactory property="client_id" />
              </cellValueFactory>
          </TableColumn>
            <TableColumn fx:id="colSitename" maxWidth="1.7976931348623157E308" minWidth="180.0" prefWidth="-1.0" text="Sitename">
                <cellValueFactory>
                    <PropertyValueFactory property="sitename" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="colContactPerson" maxWidth="1.7976931348623157E308" minWidth="150.0" prefWidth="-1.0" text="Contact Person" visible="false">
                <cellValueFactory>
                    <PropertyValueFactory property="contact_person_id" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="colCreator" maxWidth="1.7976931348623157E308" minWidth="150.0" prefWidth="-1.0" text="Creator" visible="false" />
            <TableColumn fx:id="colDateGenerated" maxWidth="1.7976931348623157E308" minWidth="150.0" prefWidth="-1.0" text="Date Generated">
                <cellValueFactory>
                    <PropertyValueFactory property="date_generated" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="colQuote" minWidth="200.0" prefWidth="75.0" text="Quote" />
            <TableColumn fx:id="colTotal" maxWidth="1.7976931348623157E308" minWidth="150.0" prefWidth="-1.0" text="Total" />
            <TableColumn fx:id="colAction" maxWidth="1.7976931348623157E308" minWidth="250.0" prefWidth="-1.0" text="Action">
               <cellValueFactory>
                  <PropertyValueFactory property="extra" />
               </cellValueFactory>
            </TableColumn>
        </columns>
      </TableView>
   </children>
</VBox>
