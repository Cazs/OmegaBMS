<BorderPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="600.0" minWidth="650.0" styleClass="border-pane" stylesheets="@../styles/home.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fadulousbms.controllers.LoginController">
   <center>
      <StackPane BorderPane.alignment="CENTER">
         <children>
            <BorderPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" StackPane.alignment="CENTER">
               <StackPane.margin>
                  <Insets />
               </StackPane.margin>
               <center>
                  <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
                     <children>
                        <HBox alignment="CENTER" onMouseClicked="#login" prefHeight="100.0" prefWidth="200.0">
                           <children>
                              <Label text="Username/eMail" />
                              <TextField fx:id="txtUsr" minWidth="300.0">
                                 <HBox.margin>
                                    <Insets left="20.0" />
                                 </HBox.margin>
                              </TextField>
                           </children>
                        </HBox>
                        <HBox alignment="CENTER" layoutX="10.0" layoutY="110.0" prefHeight="100.0" prefWidth="200.0">
                           <children>
                              <Label text="Password">
                                 <HBox.margin>
                                    <Insets left="20.0" />
                                 </HBox.margin>
                              </Label>
                              <HBox alignment="CENTER">
                                 <children>
                                    <PasswordField fx:id="txtPwd" minWidth="230.0" HBox.hgrow="ALWAYS">
                                       <HBox.margin>
                                          <Insets bottom="2.5" left="2.5" right="2.5" top="2.5" />
                                       </HBox.margin>
                                    </PasswordField>
                                    <Button minWidth="60.0" mnemonicParsing="false" text="show" wrapText="true">
                                       <HBox.margin>
                                          <Insets bottom="2.5" left="2.5" right="2.5" top="2.5" />
                                       </HBox.margin>
                                    </Button>
                                 </children>
                                 <HBox.margin>
                                    <Insets left="30.0" />
                                 </HBox.margin>
                              </HBox>
                           </children>
                        </HBox>
                        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                           <children>
                              <Button defaultButton="true" minHeight="60.0" minWidth="90.0" mnemonicParsing="false" onMouseClicked="#login" text="Login">
                                 <HBox.margin>
                                    <Insets left="30.0" />
                                 </HBox.margin></Button>
                              <Button minHeight="60.0" mnemonicParsing="false" onMouseClicked="#createAccount" text="Create Account">
                                 <HBox.margin>
                                    <Insets left="20.0" />
                                 </HBox.margin>
                              </Button>
                              <Hyperlink onMouseClicked="#resetPassword" text="Forgot Password?">
                                 <HBox.margin>
                                    <Insets left="20.0" />
                                 </HBox.margin>
                              </Hyperlink>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </center>
            </BorderPane>
         </children>
      </StackPane>
   </center>
   <top>
      <BorderPane styleClass="nav" BorderPane.alignment="CENTER">
         <top>
            <Label text="Airotek BMS" BorderPane.alignment="CENTER">
               <font>
                  <Font size="38.0" />
               </font>
            </Label>
         </top>
         <bottom>
            <BorderPane style="-fx-border-color: #343434; -fx-border-insets: -50 -10 0 -10;" BorderPane.alignment="CENTER">
               <left>
                  <HBox alignment="CENTER_LEFT" BorderPane.alignment="CENTER">
                     <children>
                        <ImageView fx:id="img_profile" fitHeight="60.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../../images/profile.png" />
                           </image></ImageView>
                        <Label fx:id="user_name" text="not signed in" HBox.hgrow="ALWAYS">
                           <font>
                              <Font size="20.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
               </left>
               <center>
                  <Label text="Login" BorderPane.alignment="CENTER">
                     <font>
                        <Font size="30.0" />
                     </font>
                  </Label>
               </center>
               <right>
                  <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                     <children>
                        <Button fx:id="btnHome" mnemonicParsing="false" onMouseClicked="#showMain" text="Home" />
                     </children>
                  </HBox>
               </right>
            </BorderPane>
         </bottom>
      </BorderPane>
   </top>
</BorderPane>
