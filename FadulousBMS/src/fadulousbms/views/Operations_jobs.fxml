<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.effect.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane stylesheets="@../styles/home.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fadulousbms.controllers.Operations_jobsController">
   <top>
      <BorderPane prefHeight="100.0" style="-fx-background-color: #4587E8;" BorderPane.alignment="CENTER">
         <top>
            <Label text="Airotek BMS" BorderPane.alignment="CENTER">
               <font>
                  <Font size="38.0" />
               </font>
            </Label>
         </top>
         <left>
            <HBox alignment="CENTER_LEFT" BorderPane.alignment="CENTER">
               <children>
                  <ImageView fx:id="img_profile" fitHeight="60.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true" />
                  <Label fx:id="user_name">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
         </left>
         <right>
            <HBox alignment="CENTER_RIGHT" BorderPane.alignment="CENTER">
               <children>
                  <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onMouseClicked="#showMain" text="Home" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </Button>
                  <Button mnemonicParsing="false" onMouseClicked="#showLogin" text="Login" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </right>
      </BorderPane>
   </top>
   <center>
      <BorderPane fx:id="table_container" BorderPane.alignment="CENTER">
         <bottom>
            <HBox alignment="CENTER" style="-fx-background-color: #8EDDE8;" BorderPane.alignment="CENTER">
               <children>
                  <Button alignment="CENTER" contentDisplay="CENTER" defaultButton="true" mnemonicParsing="false" onMouseClicked="#productionClick" prefHeight="100.0" prefWidth="100.0" style="-fx-border-radius: 20;" styleClass="sys-btn" stylesheets="@../styles/home.css" text="Production" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </HBox.margin>
                  </Button>
                  <Button mnemonicParsing="false" onMouseClicked="#salesClick" prefHeight="100.0" prefWidth="100.0" styleClass="sys-btn" text="Sales">
                     <HBox.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </HBox.margin>
                  </Button>
                  <Button mnemonicParsing="false" onMouseClicked="#facilitiesClick" prefHeight="100.0" prefWidth="100.0" styleClass="sys-btn" text="Facilities">
                     <HBox.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </HBox.margin>
                  </Button>
               </children>
               <BorderPane.margin>
                  <Insets top="20.0" />
               </BorderPane.margin>
            </HBox>
         </bottom>
         <center>
            <TableView fx:id="tblJobs" editable="true" BorderPane.alignment="CENTER">
              <columns>
                <TableColumn fx:id="job_name" text="Job name">
                </TableColumn>
                <TableColumn fx:id="job_description" text="Job description">
                </TableColumn>
                <TableColumn fx:id="client_id" text="Client">
                </TableColumn>
                <TableColumn fx:id="date_logged" text="Date logged">
                </TableColumn>
                <TableColumn fx:id="date_assigned" text="Date assigned">
                </TableColumn>
                <TableColumn fx:id="date_started" text="Date started">
                </TableColumn>
                <TableColumn fx:id="date_ended" text="Date completed">
                </TableColumn>
                <TableColumn fx:id="invoice_id" text="Invoice">
                </TableColumn>
                <TableColumn fx:id="job_completed" text="Job completed?">
                </TableColumn>
              </columns>
            </TableView>
         </center>
      </BorderPane>
   </center>
</BorderPane>
