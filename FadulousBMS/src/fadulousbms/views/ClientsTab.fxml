<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.*?>

<Tab text="Clients" fx:id="clientsTab" fx:controller="fadulousbms.controllers.ClientsController" xmlns:fx="http://javafx.com/fxml">
    <content>
        <TableView fx:id="tblClients" editable="true" tableMenuButtonVisible="true" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colClientId" maxWidth="1.7976931348623157E308" minWidth="80.0" prefWidth="-1.0" text="Client ID" visible="false">
                    <cellValueFactory>
                        <PropertyValueFactory property="_id" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="colClientName" maxWidth="1.7976931348623157E308" minWidth="180.0" prefWidth="-1.0" text="Client Name">
                    <cellValueFactory>
                        <PropertyValueFactory property="client_name" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="colClientPhysicalAddress" maxWidth="1.7976931348623157E308" minWidth="250.0" prefWidth="-1.0" text="Physical Address">
                    <cellValueFactory>
                        <PropertyValueFactory property="physical_address" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="colClientPostalAddress" maxWidth="1.7976931348623157E308" minWidth="150.0" prefWidth="-1.0" text="Postal Address" visible="true">
                    <cellValueFactory>
                        <PropertyValueFactory property="postal_address" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="colClientTel" maxWidth="1.7976931348623157E308" minWidth="150.0" prefWidth="-1.0" text="Tel" visible="false">
                    <cellValueFactory>
                        <PropertyValueFactory property="tel" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="colClientFax" maxWidth="1.7976931348623157E308" minWidth="150.0" prefWidth="-1.0" text="Fax">
                    <cellValueFactory>
                        <PropertyValueFactory property="fax" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="colClientActive" maxWidth="1.7976931348623157E308" minWidth="150.0" prefWidth="-1.0" text="Active">
                    <cellValueFactory>
                        <PropertyValueFactory property="active" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="colClientDatePartnered" maxWidth="1.7976931348623157E308" minWidth="150.0" prefWidth="-1.0" text="Date Partnered">
                    <cellValueFactory>
                        <PropertyValueFactory property="date_partnered" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="colClientWebsite" maxWidth="1.7976931348623157E308" minWidth="150.0" prefWidth="-1.0" text="Website">
                    <cellValueFactory>
                        <PropertyValueFactory property="website" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="colClientOther" maxWidth="1.7976931348623157E308" minWidth="150.0" prefWidth="-1.0" text="Other">
                    <cellValueFactory>
                        <PropertyValueFactory property="other" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="colAction" maxWidth="1.7976931348623157E308" minWidth="150.0" prefWidth="-1.0" text="Action">
                </TableColumn>
            </columns>
        </TableView>
    </content>
</Tab>